<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<LinearLayout
    	android:focusable="true" android:focusableInTouchMode="true"
    	android:layout_width="0px" android:layout_height="0px"/>

	<Spinner 
	    android:id="@+id/cityInput"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:drawSelectorOnTop="false"  />

	<TableLayout 
	    android:stretchColumns="0,1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    			
	    <TableRow
	        android:layout_width="fill_parent">
	        <TextView 
			    android:text="@string/labelDateFrom"
			    android:layout_width="wrap_content"
			    android:gravity="right"
			    android:layout_marginRight="10sp"
			    android:textSize="16sp"/>
			<EditText 
			    android:id="@+id/dateFromInput"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:inputType="date"
			    android:hint="@string/hintDateFrom"/>
	    </TableRow>
	    <TableRow
	        android:layout_width="fill_parent">
			<TextView 
			    android:text="@string/labelDateTo"
			    android:layout_width="wrap_content"
			    android:gravity="right"
			    android:layout_marginRight="10sp"
			    android:textSize="16sp"/>
			<EditText 
			    android:id="@+id/dateToInput"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:inputType="date"
			    android:hint="@string/hintDateTo"/>
	    </TableRow>
	    <TableRow
	        android:layout_width="fill_parent">
			<TextView 
			    android:text="@string/labelType"
			    android:layout_width="wrap_content"
			    android:gravity="right"
			    android:layout_marginRight="10sp"
			    android:textSize="16sp"/>
			<Spinner 
			    android:id="@+id/typeInput"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
			    />
		</TableRow>
	    <TableRow
	        android:layout_width="fill_parent">
			<TextView 
			    android:text="@string/labelGrouping"
			    android:layout_width="wrap_content"
			    android:gravity="right"
			    android:layout_marginRight="10sp"
			    android:textSize="16sp"/>
			<Spinner 
			    android:id="@+id/groupInput"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
			    />
		</TableRow>	  
	</TableLayout>
	
	<Button 
	    android:id="@+id/showButton"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/titleShow"/> 
	
</LinearLayout>